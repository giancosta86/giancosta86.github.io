{
  "name": "@giancosta86/gcwebsite",
  "version": "15.5.0",
  "description": "Personal website",
  "homepage": "https://gianlucacosta.info/",
  "bugs": "https://github.com/giancosta86/giancosta86.github.io/issues",
  "license": "CC-BY-NC-ND-3.0",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "repository": "giancosta86/giancosta86.github.io",
  "scripts": {
    "clean": "rimraf .next out dist cv/cv.css public/cv_costa_en.pdf",
    "clean:all": "pnpm clean && rimraf node_modules",
    "format": "prettier --write .",
    "check-all": "pnpm check-format && pnpm lint",
    "check-format": "prettier --check .",
    "lint": "next lint",
    "build": "pnpm check-all && next build && pnpm export && mv out dist",
    "build-cv": "pnpm build-cv-css && pnpm build-cv-pdf",
    "build-cv-pdf": "ts-node cv/build_cv.ts",
    "build-cv-css": "pnpm sass --no-source-map cv:cv",
    "watch": "npm-watch",
    "start": "concurrently \"pnpm dev\" \"pnpm watch\"",
    "dev": "next dev -- -H 0.0.0.0",
    "prod": "next start",
    "export": "next export",
    "rebuild": "pnpm clean && pnpm build && pnpm export"
  },
  "dependencies": {
    "@giancosta86/omnicourse": "^2.3.1",
    "classnames": "^2.3.1",
    "next": "^12.1.6",
    "prop-types": "^15.8.1",
    "react": "^17",
    "react-dom": "^17",
    "react-markdown": "^8.0.3",
    "recharts": "^2.1.10"
  },
  "devDependencies": {
    "@types/node": "^17",
    "@types/react": "^17",
    "concurrently": "^7.2.2",
    "eslint": "^8.16.0",
    "eslint-config-next": "12.1.6",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.2",
    "puppeteer": "24.8.2",
    "rimraf": "6.0.1",
    "sass": "^1.52.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=17.1.0"
  },
  "private": true,
  "watch": {
    "build-cv-css": "cv/cv.scss",
    "build-cv-pdf": {
      "patterns": [
        "cv"
      ],
      "extensions": "html,css"
    }
  },
  "website": {
    "title": "Gianluca Costa's Creations",
    "domain": "gianlucacosta.info",
    "description": "Gianluca Costa's personal website"
  }
}
